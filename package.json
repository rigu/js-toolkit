{
    "name": "@rigu/js-toolkit",
    "version": "1.0.5",
    "description": "A collection of JavaScript utilities for strings, objects and arrays.",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/lib/cjs/index.js",
    "module": "./distlib/esm/index.js",
    "source": "./src/index.ts",
    "types": "./dist/lib/cjs/index.d.ts",
    "exports": {
        "import": "./dist/lib/esm/index.js",
        "require": "./dist/lib/cjs/index.js"
    },
    "scripts": {
        "compile": "rimraf dist/lib && tsc && tsc --build tsconfig.es5.json",
        "build": "yarn build-esm && yarn build-cjs && yarn build-cjs-package",
        "build-esm": "tsc --project tsconfig.build.json --outDir dist/esm",
        "build-cjs": "tsc --project tsconfig.build.json --outDir dist/cjs --module commonjs --verbatimModuleSyntax false",
        "build-cjs-package": "echo '{\n  \"type\": \"commonjs\"\n}' > dist/cjs/package.json",
        "clean": "rimraf dist",
        "lint": "eslint .",
        "postinstall": "husky install",
        "prepack": "yarn clean && yarn build",
        "prettier": "prettier --check . --cache",
        "test": "yarn lint && yarn tsc && yarn prettier && yarn unit",
        "tsc": "tsc --noEmit",
        "unit": "vitest"
    },
    "author": {
        "name": "Igor AFTENI",
        "email": "i.afteni@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rigu/js-toolkit/issues"
    },
    "homepage": "https://github.com/rigu/js-toolkit#readme",
    "devDependencies": {
        "@types/node": "^20.11.27",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.5",
        "typescript": "^5.4.2",
        "vitest": "^1.3.1"
    },
    "private": false,
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "files": [
        "lib",
        "src"
    ],
    "keywords": [
        "array",
        "string",
        "toolkit",
        "utils",
        "utilities"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rigu/js-toolkit.git"
    }
}
