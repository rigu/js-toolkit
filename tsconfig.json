{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "target": "ES5",
    "verbatimModuleSyntax": true,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "outDir": "./dist",
    "strict": true
  },
  "include": [
    "src/**/*"
  ]
}
